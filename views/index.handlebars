<h1>Welcome to Mmm... Burger!</h1>

<h2>Available Burgers</h2>
<ul>
     {{#each burgers}}
          {{#unless devoured}}
               {{> burgers/burger-block devour=true}}
          {{/unless}}
     {{/each}}
</ul>

<h2>Devoured Burgers</h2>
<ul>
     {{#each burgers}}
          {{#if devoured}}
               {{> burgers/burger-block devour=false}}
          {{/if}}
     {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">
     <div class="form-group">
          <label for="bu">What is the name of the new burger?</label>
          <input type="text" id="bu" name="name">
     </div>
     <div class="form-group">
          <label for="devour">Devour now?</label><br>
          <input type="radio" name="devoured" value="1" checked>Devour!<br>
          <input type="radio" name="devoured" value="0">Wait to Eat
     </div>
     <button type="submit">Create Your Burger!</button>
</form>